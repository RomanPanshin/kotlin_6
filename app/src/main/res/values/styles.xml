<resources xmlns:tools="http://schemas.android.com/tools">
	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
		<!-- Common customization for both light and dark themes. -->
		<item name="colorPrimary">@color/purple_500</item>
		<item name="colorPrimaryDark">@color/purple_700</item>
		<item name="colorAccent">@color/teal_200</item>
		<!-- Ensure to use the appropriate background color based on the theme. -->
	</style>

	<style name="AppTheme.Light" parent="Theme.Material3.Light.NoActionBar">
		<!-- Light theme specific customization. -->
		<item name="colorPrimary">@color/purple_200</item>
		<item name="colorPrimaryDark">@color/purple_500</item>
		<item name="colorAccent">@color/teal_700</item>
		<item name="android:textColor">@color/black</item>
		<item name="android:windowBackground">@color/white</item>
	</style>

	<style name="AppTheme.Dark" parent="Theme.Material3.Dark.NoActionBar">
		<!-- Dark theme specific customization. -->
		<item name="colorPrimary">@color/purple_500</item>
		<item name="colorPrimaryDark">@color/purple_700</item>
		<item name="colorAccent">@color/teal_200</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:windowBackground">@color/black</item>
	</style>
</resources>
